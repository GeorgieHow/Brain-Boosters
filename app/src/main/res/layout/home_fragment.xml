<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:text="Home"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:textColor="@color/inverseSurfaceColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_menu"
            app:layout_constraintStart_toStartOf="@id/home_menu"/>


        <TextView
            android:id="@+id/home_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shadow_drawable"
            app:layout_constraintTop_toBottomOf="@id/home_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Welcome,"
            android:textSize="14pt"
            android:textColor="@color/inverseSurfaceColor"
            app:layout_constraintTop_toTopOf="@id/home_menu"
            app:layout_constraintStart_toStartOf="@id/home_menu"/>

        <TextView
            android:id="@+id/user_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="@color/inverseSurfaceColor"
            app:layout_constraintTop_toBottomOf="@+id/welcome_message"
            app:layout_constraintStart_toStartOf="@id/welcome_message"/>

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@id/home_menu"
            app:layout_constraintTop_toTopOf="@id/home_menu"/>

        <Button
            style="@style/Widget.Material3.Button"
            android:id="@+id/start_generate_quiz_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="25dp"
            android:text="Generate Own Quiz"
            app:layout_constraintStart_toStartOf="@id/home_menu"
            app:layout_constraintTop_toBottomOf="@id/user_fullname"
            app:layout_constraintEnd_toEndOf="@id/home_menu"
            />

        <Button
            style="@style/Widget.Material3.Button"
            android:id="@+id/family_album_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="25dp"
            android:text="Go to Family Album"
            app:layout_constraintStart_toStartOf="@id/home_menu"
            app:layout_constraintTop_toBottomOf="@id/start_generate_quiz_button"
            app:layout_constraintEnd_toEndOf="@id/home_menu"
            />

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:padding="25dp"
            android:text="Log Out"
            app:layout_constraintStart_toStartOf="@id/home_menu"
            app:layout_constraintBottom_toBottomOf="@id/home_menu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>