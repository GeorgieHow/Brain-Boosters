<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shadow_drawable">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/quiz_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz - "
            android:textSize="29dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/quiz_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Date"
            android:textSize="29dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/quiz_title_text"/>

        <TextView
            android:id="@+id/quiz_notes_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz notes will be displayed here"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/quiz_date_text" />

        <TextView
            android:id="@+id/click_on_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to see more..."
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/quiz_notes_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>


