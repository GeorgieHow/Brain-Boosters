<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7fbf1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:text="Profile"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:textColor="@color/inverseSurfaceColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/profile_menu"
            app:layout_constraintStart_toStartOf="@id/profile_menu"/>

        <TextView
            android:id="@+id/profile_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shadow_drawable"
            app:layout_constraintTop_toBottomOf="@id/profile_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerInside"
            android:background="@color/primaryContainerColor"
            app:shapeAppearance="@style/CustomShapeAppearance"
            app:layout_constraintStart_toStartOf="@id/profile_menu"
            app:layout_constraintEnd_toEndOf="@id/profile_menu"
            app:layout_constraintTop_toTopOf="@id/profile_menu"/>

        <TextView
            android:id="@+id/full_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingLeft="50dp"
            android:text="Full Name:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image_view"
            app:layout_constraintStart_toStartOf="@id/profile_menu" />

        <TextView
            android:id="@+id/full_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/full_name_label"
            app:layout_constraintStart_toEndOf="@id/full_name_label" />

        <EditText
            android:id="@+id/full_name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="25dp"
            android:text=""
            android:textSize="25dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/full_name_label"
            app:layout_constraintStart_toEndOf="@id/full_name_label"
            app:layout_constraintEnd_toEndOf="@id/profile_menu"
            app:layout_constraintBottom_toBottomOf="@id/full_name_label"/>

        <TextView
            android:id="@+id/age_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="Age:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/full_name_label"
            app:layout_constraintStart_toStartOf="@id/profile_menu"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/age_label"
            app:layout_constraintStart_toEndOf="@id/age_label"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/age_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="25dp"
            android:text=""
            android:textSize="25dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/age_label"
            app:layout_constraintStart_toEndOf="@id/age_label"
            app:layout_constraintEnd_toEndOf="@id/profile_menu"
            app:layout_constraintBottom_toBottomOf="@id/age_label"/>

        <TextView
            android:id="@+id/dementia_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="Dementia Type:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/age_label"
            app:layout_constraintStart_toStartOf="@id/profile_menu"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/dementia_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/dementia_type_label"
            app:layout_constraintStart_toEndOf="@id/dementia_type_label"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/dementia_type_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="25dp"
            android:text=""
            android:textSize="25dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/dementia_type_label"
            app:layout_constraintStart_toEndOf="@id/dementia_type_label"
            app:layout_constraintEnd_toEndOf="@id/profile_menu"
            app:layout_constraintBottom_toBottomOf="@id/dementia_type_label"/>

        <TextView
            android:id="@+id/dementia_level_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="Dementia Level:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/dementia_type_label"
            app:layout_constraintStart_toStartOf="@id/profile_menu"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/dementia_level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/dementia_level_label"
            app:layout_constraintStart_toEndOf="@id/dementia_level_label"
            android:layout_marginStart="8dp"/>

        <Spinner
            android:id="@+id/dementia_level_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:entries="@array/dementia_levels"
            android:textSize="25dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/dementia_level_label"
            app:layout_constraintStart_toEndOf="@id/dementia_level_label"
            app:layout_constraintBottom_toBottomOf="@id/dementia_level_label"/>

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="Email:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/dementia_level_label"
            app:layout_constraintStart_toStartOf="@id/profile_menu"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/email_label"
            app:layout_constraintStart_toEndOf="@id/email_label"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Edit profile"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="@id/profile_menu"
            app:layout_constraintBottom_toBottomOf="@id/profile_menu"/>

        <Button
            android:id="@+id/confirm_edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Confirm edit"
            android:textSize="25dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/profile_menu"
            app:layout_constraintBottom_toBottomOf="@id/profile_menu"/>

        <Button
            android:id="@+id/cancel_edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Cancel edit"
            android:textSize="25dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/profile_menu"
            app:layout_constraintBottom_toBottomOf="@id/profile_menu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>