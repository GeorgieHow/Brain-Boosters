<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/quizImageSelectionFragmentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/select_picture_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:text="Select Pictures"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:textColor="@color/inverseSurfaceColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/select_picture_text"
        app:layout_constraintStart_toStartOf="@id/select_picture_text"/>

    <TextView
        android:id="@+id/select_picture_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Tap on the pictures you would like to select for the quiz. Pictures selected will be highlighted."
        android:paddingHorizontal="20dp"
        android:textColor="@color/inverseSurfaceColor"
        app:layout_constraintTop_toBottomOf="@id/select_picture_title"
        app:layout_constraintBottom_toTopOf="@id/image_selector_recycler_view"
        app:layout_constraintStart_toStartOf="@id/select_picture_title"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_selector_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_picture_text"
        app:layout_constraintBottom_toTopOf="@id/back_button"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:padding="25dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/start_quiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:padding="25dp"
        android:text="Start Quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>