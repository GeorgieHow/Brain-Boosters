<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7fbf1">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/statistics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:text="Statistics"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:textColor="@color/inverseSurfaceColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/statistics_menu"
            app:layout_constraintStart_toStartOf="@id/statistics_menu"/>


        <TextView
            android:id="@+id/statistics_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shadow_drawable"
            app:layout_constraintTop_toBottomOf="@id/statistics_title"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="@id/statistics_menu"
            app:layout_constraintStart_toStartOf="@id/statistics_menu"
            app:layout_constraintEnd_toEndOf="@id/statistics_menu"
            app:layout_constraintBottom_toBottomOf="@id/statistics_menu">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/total_quiz_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Total Quizzes done:"
                    android:textSize="25dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/total_quiz_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text=""
                    android:textSize="25dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/total_quiz_title"/>

                <com.example.brainboosters.customTextview.VerticalTextView
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:text="No. of Quizzes"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="@id/barChart"
                    app:layout_constraintBottom_toBottomOf="@id/barChart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/barChart"/>

                <TextView
                    android:id="@+id/mood_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Mood"
                    app:layout_constraintStart_toStartOf="@id/barChart"
                    app:layout_constraintEnd_toEndOf="@id/barChart"
                    app:layout_constraintTop_toBottomOf="@id/barChart"/>

                <TextView
                    android:id="@+id/mood_bar_chart_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Total of Moods Over Quizzes"
                    android:textSize="20dp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total_quiz_title"
                    app:layout_constraintBottom_toTopOf="@id/barChart"
                    />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="50dp"
                    app:layout_constraintTop_toBottomOf="@id/mood_bar_chart_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>


                <TextView
                    android:id="@+id/long_term_line_chart_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Total Correct Long Term Questions"
                    android:textSize="20dp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mood_title"
                    app:layout_constraintBottom_toTopOf="@id/lineChart"
                    />

                <com.example.brainboosters.customTextview.VerticalTextView
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:text="No. of Correct Answers"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="@id/lineChart"
                    app:layout_constraintBottom_toBottomOf="@id/lineChart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/lineChart"/>

                <TextView
                    android:id="@+id/day_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Day Taken"
                    app:layout_constraintStart_toStartOf="@id/lineChart"
                    app:layout_constraintEnd_toEndOf="@id/lineChart"
                    app:layout_constraintTop_toBottomOf="@id/lineChart"/>


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="50dp"
                    app:layout_constraintTop_toBottomOf="@id/long_term_line_chart_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>