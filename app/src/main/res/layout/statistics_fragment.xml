<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/statisticsFragmentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7fbf1">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/statistics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:text="Statistics"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:textColor="@color/inverseSurfaceColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/statistics_menu"
            app:layout_constraintStart_toStartOf="@id/statistics_menu"/>


        <TextView
            android:id="@+id/statistics_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shadow_drawable"
            app:layout_constraintTop_toBottomOf="@id/statistics_title"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="@id/statistics_menu"
            app:layout_constraintStart_toStartOf="@id/statistics_menu"
            app:layout_constraintEnd_toEndOf="@id/statistics_menu"
            app:layout_constraintBottom_toBottomOf="@id/statistics_menu">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/bar_chart_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shadow_drawable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/mood_bar_chart_title"
                    app:layout_constraintBottom_toBottomOf="@id/mood_title"
                    />

                <TextView
                    android:id="@+id/long_term_line_chart_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shadow_drawable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/long_term_line_chart_title"
                    app:layout_constraintBottom_toBottomOf="@id/day_title"
                    />

                <TextView
                    android:id="@+id/short_term_line_chart_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shadow_drawable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/short_term_line_chart_title"
                    app:layout_constraintBottom_toBottomOf="@id/short_term_day_title"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/total_quizzes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/total_quiz_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Quizzes done:"
                        android:textSize="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/total_quiz_text"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/total_quiz_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="25dp"
                        app:layout_constraintStart_toEndOf="@id/total_quiz_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/total_quiz_title"
                        app:layout_constraintBottom_toBottomOf="@id/total_quiz_title"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/empty_text_view"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <com.example.brainboosters.customTextview.VerticalTextView
                    android:id="@+id/no_quizzes_title"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:text="No. of Quizzes"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="@id/mood_bar_chart"
                    app:layout_constraintBottom_toBottomOf="@id/mood_bar_chart"
                    app:layout_constraintStart_toEndOf="@id/empty_text_view"
                    app:layout_constraintEnd_toStartOf="@id/mood_bar_chart"/>

                <TextView
                    android:id="@+id/mood_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Mood"
                    android:paddingBottom="20dp"
                    app:layout_constraintStart_toStartOf="@id/mood_bar_chart"
                    app:layout_constraintEnd_toEndOf="@id/mood_bar_chart"
                    app:layout_constraintTop_toBottomOf="@id/mood_bar_chart"/>

                <TextView
                    android:id="@+id/mood_bar_chart_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Total of Moods Over Quizzes"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total_quizzes_layout"
                    app:layout_constraintBottom_toTopOf="@id/mood_bar_chart"
                    />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/mood_bar_chart"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="50dp"
                    app:layout_constraintTop_toBottomOf="@id/mood_bar_chart_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>


                <TextView
                    android:id="@+id/long_term_line_chart_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="Long Term Question Answers Comparison"
                    android:textSize="20dp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mood_title"
                    app:layout_constraintBottom_toTopOf="@id/long_term_line_chart"
                    />

                <Spinner
                    android:id="@+id/long_term_line_chart_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/time_options"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@id/long_term_line_chart_title"
                    app:layout_constraintEnd_toEndOf="@id/long_term_line_chart"/>

                <com.example.brainboosters.customTextview.VerticalTextView
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:text="No. of Answers"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="@id/long_term_line_chart"
                    app:layout_constraintBottom_toBottomOf="@id/long_term_line_chart"
                    app:layout_constraintStart_toEndOf="@id/empty_text_view"
                    app:layout_constraintEnd_toStartOf="@id/long_term_line_chart"/>

                <TextView
                    android:id="@+id/day_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Day Taken"
                    android:paddingBottom="20dp"
                    app:layout_constraintStart_toStartOf="@id/long_term_line_chart"
                    app:layout_constraintEnd_toEndOf="@id/long_term_line_chart"
                    app:layout_constraintTop_toBottomOf="@id/long_term_line_chart"/>


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/long_term_line_chart"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="50dp"
                    app:layout_constraintTop_toBottomOf="@id/long_term_line_chart_spinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>




                <TextView
                    android:id="@+id/short_term_line_chart_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="Short Term Question Answers Comparison"
                    android:textSize="20dp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/day_title"
                    app:layout_constraintBottom_toTopOf="@id/short_term_line_chart" />

                <Spinner
                    android:id="@+id/short_term_line_chart_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/time_options"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@id/short_term_line_chart_title"
                    app:layout_constraintEnd_toEndOf="@id/short_term_line_chart"/>

                <com.example.brainboosters.customTextview.VerticalTextView
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:text="No. of Answers"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="@id/short_term_line_chart"
                    app:layout_constraintBottom_toBottomOf="@id/short_term_line_chart"
                    app:layout_constraintStart_toEndOf="@id/empty_text_view"
                    app:layout_constraintEnd_toStartOf="@id/short_term_line_chart"/>

                <TextView
                    android:id="@+id/short_term_day_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Day Taken"
                    android:paddingBottom="20dp"
                    app:layout_constraintStart_toStartOf="@id/short_term_line_chart"
                    app:layout_constraintEnd_toEndOf="@id/short_term_line_chart"
                    app:layout_constraintTop_toBottomOf="@id/short_term_line_chart"/>


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/short_term_line_chart"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="50dp"
                    app:layout_constraintTop_toBottomOf="@id/short_term_line_chart_spinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>