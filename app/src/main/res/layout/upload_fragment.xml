<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7fbf1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/upload_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:text="Upload Photo"
            android:textColor="@color/inverseSurfaceColor"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/choose_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/primaryColor"
            android:paddingHorizontal="20dp"
            android:text="Choose picture"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@id/photo_who_text"
            app:layout_constraintStart_toStartOf="@id/upload_title"
            app:layout_constraintTop_toBottomOf="@id/upload_title" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/photo_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/inverseSurfaceColor"
            android:fontFamily="sans-serif"
            android:hint="Enter file name*"
            android:textSize="16sp"
            android:textColor="@color/inverseSurfaceColor"
            android:textColorHint="@color/inverseSurfaceColor"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="@id/upload_title"
            app:layout_constraintTop_toBottomOf="@id/choose_picture_button">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/photo_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/photo_year_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/inverseSurfaceColor"
            android:fontFamily="sans-serif"
            android:hint="Enter year (YYYY)*"
            android:inputType="date"
            android:textSize="16dp"
            android:textColor="@color/inverseSurfaceColor"
            android:textColorHint="@color/inverseSurfaceColor"
            app:layout_constraintEnd_toEndOf="@id/photo_where_text"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/choose_picture_button">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/photo_year_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/photo_where_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="sans-serif"
            android:hint="Where was the photo taken?*"
            android:textColor="@color/inverseSurfaceColor"
            android:textColorHint="@color/inverseSurfaceColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/photo_name_text"
            app:layout_constraintTop_toBottomOf="@id/photo_year_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/photo_where_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/photo_who_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/inverseSurfaceColor"
            android:fontFamily="sans-serif"
            android:hint="(Optional) Who is in the photo?"
            android:textColor="@color/inverseSurfaceColor"
            android:textColorHint="@color/inverseSurfaceColor"
            app:layout_constraintEnd_toEndOf="@id/photo_where_text"
            app:layout_constraintStart_toStartOf="@id/photo_name_text"
            app:layout_constraintTop_toBottomOf="@id/photo_where_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/photo_who_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/photo_event_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/inverseSurfaceColor"
            android:fontFamily="sans-serif"
            android:hint="What event was happening?*"
            android:textColor="@color/inverseSurfaceColor"
            android:textColorHint="@color/inverseSurfaceColor"
            app:layout_constraintEnd_toEndOf="@id/photo_where_text"
            app:layout_constraintStart_toStartOf="@id/photo_name_text"
            app:layout_constraintTop_toBottomOf="@id/photo_who_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/photo_event_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/chosen_picture_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="20dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@id/upload_button"
            app:layout_constraintEnd_toEndOf="@id/photo_who_text"
            app:layout_constraintStart_toStartOf="@id/photo_who_text"
            app:layout_constraintTop_toBottomOf="@id/photo_event_text" />

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@color/primaryColor"
            android:drawableRight="@drawable/upload"
            android:paddingHorizontal="20dp"
            android:text="Upload"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/chosen_picture_image_view" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/primaryColor"
            android:paddingHorizontal="20dp"
            android:text="Back"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/upload_button"
            app:layout_constraintEnd_toEndOf="@+id/chosen_picture_image_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>