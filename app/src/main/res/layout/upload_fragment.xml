<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7fbf1">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/upload_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="40sp"
            android:text="Upload Photo"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:textColor="@color/inverseSurfaceColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/choose_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:textSize="25sp"
            android:text="Choose picture"
            android:paddingHorizontal="20dp"
            app:layout_constraintStart_toStartOf="@id/upload_title"
            app:layout_constraintTop_toBottomOf="@id/upload_title"
            />

        <EditText
            android:id="@+id/photo_name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:hint="Enter file name"
            android:textColor="@color/inverseSurfaceColor"
            android:textColorHint="@color/inverseSurfaceColor"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="@id/choose_picture_button"
            app:layout_constraintTop_toBottomOf="@id/choose_picture_button"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/chosen_picture_image_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/photo_name_edit_text"
            app:layout_constraintBottom_toTopOf="@id/upload_button"
            />

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:textSize="25sp"
            android:text="Upload"
            android:drawableRight="@drawable/upload"
            android:paddingHorizontal="20dp"
            app:layout_constraintStart_toStartOf="@id/photo_name_edit_text"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:textSize="25sp"
            android:text="Back"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/upload_button"
            app:layout_constraintEnd_toEndOf="parent"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>