<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/picture_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="Picture Details"
        android:textColor="@color/inverseSurfaceColor"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/file_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="File Name: "
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/picture_title"
        app:layout_constraintTop_toBottomOf="@+id/picture_title" />

    <TextView
        android:id="@+id/file_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="5dp"
        android:text="File Name"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/file_name_title"
        app:layout_constraintTop_toBottomOf="@+id/picture_title" />

    <TextView
        android:id="@+id/file_year_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="Year taken:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/file_name_title"
        app:layout_constraintTop_toBottomOf="@+id/file_name_title" />

    <TextView
        android:id="@+id/file_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="5dp"
        android:text="Year Taken"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/file_year_title"
        app:layout_constraintTop_toBottomOf="@+id/file_name_text" />

    <TextView
        android:id="@+id/file_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="Place taken:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/file_name_title"
        app:layout_constraintTop_toBottomOf="@+id/file_year_title" />

    <TextView
        android:id="@+id/file_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="5dp"
        android:text="Year Taken"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/file_year_text"
        app:layout_constraintTop_toBottomOf="@+id/file_year_text" />

    <ImageView
        android:id="@+id/picture_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/file_place_text" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/primaryColor"
        android:paddingHorizontal="20dp"
        android:text="Back"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>